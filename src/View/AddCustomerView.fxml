   <Label layoutX="73.0" layoutY="227.0" text="Division"/>
   <Label layoutX="50.0" layoutY="62.0" text="Customer ID:"/>
   <ComboBox fx:id="countryComboBox" layoutX="131.0" layoutY="186.0" onAction="#onActionCountryComboBox"
             prefHeight="26.0" prefWidth="200.0"/>
   <ComboBox fx:id="divisionComboBox" layoutX="131.0" layoutY="223.0" prefHeight="26.0" prefWidth="200.0"/>
   <TextField fx:id="customerIdTextField" disable="true" editable="false" layoutX="133.0" layoutY="57.0"
              prefHeight="26.0" prefWidth="42.0"/>
   <Label layoutX="85.0" layoutY="104.0" text="Name"/>
   <Label layoutX="75.0" layoutY="145.0" text="Address"/>
   <Label layoutX="76.0" layoutY="336.0" text="Phone"/>
